---
// Supports weights 100-900
import "@fontsource-variable/jost/wght-italic.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Somos una academia de alto rendimiento, puedes inscribirte en Futbol , Basquet , voley y 
    entrenamiento de porteros" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" />
    <title>{title}</title>
  </head>
  <div class="mx-auto pt-12 lg:pt-16">
    <body>
      <slot />
    </body>
  </div>

  <style is:global>
    html {
      font-family: "Jost Variable", system-ui, sans-serif;
      background: #242d5c;
      color-scheme: dark light;
    }
  </style>


</html>
